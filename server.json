{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.lchinglen/time-mcp-server",
  "description": "MCP server for timezone conversions and time queries with support for IANA timezones",
  "version": "1.0.2",
  "author": "Chinglen Lamabam",
  "license": "Apache-2.0", 
  "homepage": "https://pypi.org/project/lchinglen-time-mcp-server/",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "lchinglen-time-mcp-server",
      "version": "1.0.2",
      "transport": {
        "type": "stdio"
      }
    }
  ],
  "capabilities": {
    "tools": [
      {
        "name": "get_current_time", 
        "description": "Get the current time in a specific timezone"
      },
      {
        "name": "convert_time",
        "description": "Convert time between different timezones"
      }
    ]
  },
  "tags": [
    "time",
    "timezone", 
    "conversion",
    "datetime",
    "utilities"
  ]
}